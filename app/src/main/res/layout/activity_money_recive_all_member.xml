<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ActivityMoneyReciveAllMember">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/id_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_txt_allAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:padding="15dp"
            android:layout_weight="1"
            android:textColor="@color/textTabBright"
            android:text="All Admin"/>
        <TextView
            android:id="@+id/id_txt_allManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Manager"
            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="@color/textTabLight"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/id_txt_allUser"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All User"
            android:padding="15dp"
            android:textColor="@color/textTabLight"
            android:textSize="16sp"/>
    </LinearLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_below="@id/id_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/id_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></android.support.v4.view.ViewPager>
    </ScrollView>

</RelativeLayout>