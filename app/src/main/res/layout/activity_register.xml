<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/id_bgHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/heade_ph"
                >
                <TextView
                    android:id="@+id/id_tv_welcome"
                    android:background="@drawable/tv_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Your Account"
                    android:padding="15dp"
                    android:layout_marginTop="-70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp"
                    android:textColor="#00FFFF"
                    android:textSize="25sp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/id_iv_reg"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/default_image" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="230dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <android.support.v7.widget.CardView
                    android:id="@+id/id_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/id_tv_name_ar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="User Name"
                            android:textColor="@color/colorPurple"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/id_et_name_ar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/tv_background"
                            android:drawableLeft="@drawable/email"
                            android:drawablePadding="12dp"
                            android:hint="Enter Your User Name"
                            android:inputType="text"
                            android:paddingLeft="20dp"
                            android:paddingTop="15dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp"
                            android:textColor="#000000"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/id_tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Email"
                            android:textColor="@color/colorPurple"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/id_et_email_ar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/tv_background"
                            android:drawableLeft="@drawable/email"
                            android:drawablePadding="12dp"
                            android:hint="Enter Your Email"
                            android:inputType="text"
                            android:paddingLeft="20dp"
                            android:paddingTop="15dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp"
                            android:textColor="#000000"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/id_tv_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Password"
                            android:textColor="@color/colorPurple"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/id_et_pass_ar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/tv_background"
                            android:drawableLeft="@drawable/key"
                            android:drawablePadding="10dp"
                            android:hint="****************"
                            android:inputType="textPassword"
                            android:paddingLeft="20dp"
                            android:paddingTop="15dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp"
                            android:textColor="#000000"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/id_tv_mess_id_ar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Mess Id"
                            android:textColor="@color/colorPurple"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/id_et_mess_id_ar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/tv_background"
                            android:drawableLeft="@drawable/email"
                            android:drawablePadding="12dp"
                            android:hint="Enter Your Mess Id"
                            android:inputType="text"
                            android:paddingLeft="20dp"
                            android:paddingTop="15dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp"
                            android:textColor="#000000"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/id_tv_ut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="User Type"
                            android:textColor="@color/colorPurple"
                            android:textSize="25sp" />

                        <Spinner
                            android:id="@+id/id_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp" />

                        <TextView
                            android:id="@+id/id_tv_email_ad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Admin Email"
                            android:textColor="@color/colorPurple"
                            android:textSize="25sp"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/id_et_email_ad_ar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/tv_background"
                            android:drawableLeft="@drawable/email"
                            android:drawablePadding="12dp"
                            android:hint="Enter Admin Email"
                            android:inputType="text"
                            android:paddingLeft="20dp"
                            android:paddingTop="15dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/id_tv_pass_ad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Admin Password"
                            android:textColor="@color/colorPurple"
                            android:textSize="25sp"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/id_et_password_ad_ar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginHorizontal="20dp"
                            android:background="@drawable/tv_background"
                            android:drawableLeft="@drawable/key"
                            android:drawablePadding="10dp"
                            android:hint="****************"
                            android:inputType="textPassword"
                            android:paddingLeft="20dp"
                            android:paddingTop="15dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp"
                            android:textColor="#000000"
                            android:textSize="25sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <Button
                    android:id="@+id/id_btn_create_account_ar"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/id_cv"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_btn_login"
                    android:text="Create Account"
                    android:textColor="#C71DE4"
                    android:textSize="25sp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/id_btn_back_ar"
                    android:text="Back To Homepage"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:background="@drawable/bg_btn_register"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/id_btn_create_account_ar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:layout_below="@+id/id_btn_back_ar"
                    android:id="@+id/id_pb_ar"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:indeterminate="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>